{
  "$schema": "https://turbo.build/schema.json",

  "ui": "tui",

  "globalDependencies": [
    ".env",
    ".env.local"
  ],

  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".svelte-kit/**",
        "dist/**",
        "build/**"
      ]
    },

    "dev": {
      "cache": false,
      "persistent": true
    },

    "lint": {
      "dependsOn": [
        "^build"
      ]
    },

    "clean": {
      "cache": false
    }
  }
}
